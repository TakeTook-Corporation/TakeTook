<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MainTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0088FF</item>
        <item name="colorPrimaryVariant">#BEEDFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">#98E0FB</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00AF9F</item>
        <item name="colorSecondaryVariant">#9FFFFFFF</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="cardBackgroundColor">#B0B0B1</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="CollapsedCellAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="ExpandedCellAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextColor">#FFFFFF</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

</resources>